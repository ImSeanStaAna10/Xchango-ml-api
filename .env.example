# Allow translation (auto-detect Tagalog/Taglish -> English)
ENABLE_TRANSLATION=true

# LibreTranslate endpoint (palitan kung may sarili kang instance)
LIBRETRANSLATE_URL=https://translate.astian.org/translate
# LIBRETRANSLATE_URL=https://libretranslate.com/translate

# Weights for combining signals (0.0 - 1.0; dapat sum=1.0 ideally)
TEXT_WEIGHT=0.6
IMAGE_WEIGHT=0.4

# Confidence level thresholds (percent)
CONF_LOW=0.40
CONF_HIGH=0.80

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO


ENABLE_OCR=false